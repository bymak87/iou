<title>IOU Details</title>
  <div class="fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
      <h1><a href="#">IOU</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section">
    <!-- Right Nav Section -->
   <ul class="right">
      <li><%= link_to("Dashboard","/users/#{current_user.id}")%></li>
      <li class="divider"></li>
      </li>
    </ul>
  </nav>
</div>



<H1 class="title animated bounceIn">IOU Details</H1>
<% if flash[:created] %>
<div class="white"> <%= flash[:created] %> </div>
<% end %>
<div class="mid">
    <ul id="myList" class="white bf">
      <li>Name : <%= @event.name%></li>
      <li>Date : <%= @event.pay_date%></li>
      <li>Friend : <%= @event.friend%></li>
      <li>Amount : <%= @event.amount%></li>
      <li>Status : <%= @event.status%></li>
    </ul>
  <%=link_to_if(@event.status == "pending","Mark IOU as Paid", events_paid_path(:event_id => @event.id), :method => "post", class: "button radius") %>
  <br>

<select class="resp">
  <option value="1day">1 Day</option>
  <option value="1hour">1 Hour</option>
  <option value="3hour">3 Hours</option>
  <option value="6hour">6 Hours</option>
  <option value="12hour">12 Hours</option>
</select>
<br>
  <%=link_to("Remind Me", events_remind_path(:event_id => @event.id), :method =>"post", class: "button radius") %>

<br />


</div>




